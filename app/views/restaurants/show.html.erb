<div class="container mt-3">
  <h1 class="mb-3"><%= @restaurant.name %></h1>
  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <p>Address: <%= @restaurant.address %></p>
      <p>Category: <%= @restaurant.category %></p>
      <p>
        Phone number:
        <% if @restaurant.phone_number? %>
          <%= @restaurant.phone_number %>
        <% else %>
          <%= "Unknown" %>
        <% end %>
      </p>
    </div>
  </div>

  <h4 class="mt-5">All reviews:</h2>
  <% @restaurant.reviews.each do |review| %>
    <div class="notification mt-3">
      <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
      <div class="notification-content">
        <p><small><%= review.rating %>/5</small></p>
        <p><%= review.content %></p>
      </div>
    </div>
  <% end %>

  <h4 class="mt-5">Add yours:</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit class:"btn btn-primary w-100 mt-2" %>
  <% end %>
</div>
